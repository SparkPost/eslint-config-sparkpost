{
  "name": "eslint-config-sparkpost",
  "version": "2.0.0",
  "description": "ESLint configuration for SparkPost",
  "repository": "SparkPost/eslint-config-sparkpost",
  "author": "SparkPost",
  "license": "Apache-2.0",
  "main": "index.js",
  "keywords": [
    "eslint",
    "eslintconfig"
  ],
  "scripts": {
    "prettify": "prettier-eslint --eslint-config-path ./index.js --write *.js",
    "test": "eslint -c index.js --env node ."
  },
  "dependencies": {
    "eslint-plugin-mocha": "^5.2.1"
  },
  "devDependencies": {
    "eslint": "^5.13.0",
    "husky": "^1.3.1",
    "prettier-eslint-cli": "^4.7.1"
  },
  "peerDependencies": {
    "eslint": "^5.13.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && npm run prettify"
    }
  }
}
