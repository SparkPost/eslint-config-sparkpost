    "@typescript-eslint/parser": "^2.27.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-mocha": "^5.3.0",
    "eslint-plugin-prettier": "^3.1.2",
    "prettier": "^2.0.4",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "husky": "^1.3.1"
  },
  "peerDependencies": {
    "eslint": "^5.13.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
